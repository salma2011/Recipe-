<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - RecipeHaven</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" href="/">🍽️ RecipeHaven</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Recipes">Recipes</a></li>
                <li class="nav-item"><a class="nav-link" href="/Categories">Categories</a></li>
                <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/Account/Register">Register</a></li>

            </ul>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center mt-5 py-4">
        <h5 class="fw-bold">RecipeHaven</h5>
        <p>Discover the best recipes from around the world.</p>
        <div>
            <a class="text-white text-decoration-none me-3" href="#">Privacy Policy</a>
            <a class="text-white text-decoration-none me-3" href="#">Terms</a>
            <a class="text-white text-decoration-none" href="#">Contact</a>
        </div>
        <p class="mt-2 mb-0 small">© 2025 RecipeHaven. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
