@model IEnumerable<RecipePlatform.Models.Recipe>

@{
    ViewData["Title"] = "Manage Recipes";
}

<h2>Manage Recipes</h2>

<p>
    <a asp-action="CreateRecipe" class="btn btn-success">Add New Recipe</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Category</th>
            <th>Prep Time (mins)</th>
            <th>Cook Time (mins)</th>
            <th>Servings</th>
            <th>Difficulty</th>
            <th>Author</th> <!-- اسم الشخص صاحب الوصفة -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(recipe.ImagePath))
                    {
                        <img src="@recipe.ImagePath" alt="Recipe Image" width="80" height="80" style="object-fit:cover;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@recipe.Title</td>
                <td>@recipe.Category?.Name</td>
                <td>@recipe.PreparationTime</td>
                <td>@recipe.CookingTime</td>
                <td>@recipe.Servings</td>
                <td>@recipe.Difficulty</td>
                <td>@recipe.User?.Email</td> <!-- عرض اسم الشخص -->
                <td>
                    <a asp-action="DeleteRecipe" asp-route-id="@recipe.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this recipe?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
