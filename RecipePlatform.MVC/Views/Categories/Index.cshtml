@model IEnumerable<RecipePlatform.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<h2>Manage Categories</h2>

<p>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">Add New Category</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
