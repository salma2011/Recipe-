 @model List<RecipePlatform.Models.Recipe>

@{
    ViewData["Title"] = "My Recipes";
}

<h2 class="mb-4">My Recipes</h2>

<a href="@Url.Action("Create", "Dashboard")" class="btn btn-success mb-4">Add New Recipe</a>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var recipe in Model)
        {
            <div class="col">
                <div class="card h-100 shadow">
                    <img src="@recipe.ImagePath" class="card-img-top" alt="@recipe.Title" style="height: 200px; object-fit: cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@recipe.Title</h5>
                        <p class="card-text text-muted">Category: @recipe.Category?.Name</p>
                        <p class="card-text">
                            @recipe.Description?.Substring(0, Math.Min(100, recipe.Description.Length))...
                        </p>

                        <div>
                            <span class="badge bg-info">Prep: @recipe.PreparationTime min</span>
                            <span class="badge bg-secondary">Cook: @recipe.CookingTime min</span>
                            <span class="badge bg-success">@recipe.Servings Servings</span>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@recipe.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">You have no recipes yet.</p>
}
